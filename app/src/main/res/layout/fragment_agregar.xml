<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AgregarFragment">

    <TextView
        android:id="@+id/txtvAgregarAsignatura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_tituloverde"
        android:gravity="center"
        android:text="AGREGAR ACTIVIDAD"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtvActividad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Actividad:"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="@+id/txtvAgregarAsignatura"
        app:layout_constraintTop_toBottomOf="@+id/txtvAgregarAsignatura" />

    <EditText
        android:id="@+id/edtActividad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:hint="Ingresa el nombre de la actividad"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/txtvActividad"
        app:layout_constraintTop_toBottomOf="@+id/txtvActividad" />

    <TextView
        android:id="@+id/txtvDias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Días:"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtvActividad"
        app:layout_constraintTop_toBottomOf="@+id/edtActividad"
        app:layout_constraintVertical_bias="0.016" />

    <RadioButton
        android:id="@+id/rbtnLunes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lunes"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="@+id/txtvDias"
        app:layout_constraintTop_toBottomOf="@+id/txtvDias"
        app:layout_constraintVertical_bias="0.0" />

    <RadioButton
        android:id="@+id/rbtnMartes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Martes"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/rbtnLunes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintStart_toEndOf="@+id/rbtnLunes"
        app:layout_constraintTop_toTopOf="@+id/rbtnLunes"
        app:layout_constraintVertical_bias="0.0" />

    <RadioButton
        android:id="@+id/rbtnMiercoles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Miércoles"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/rbtnLunes"
        app:layout_constraintTop_toBottomOf="@+id/rbtnLunes"
        app:layout_constraintVertical_bias="0.02" />

    <RadioButton
        android:id="@+id/rbtnJueves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jueves"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/rbtnMiercoles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/rbtnMartes"
        app:layout_constraintTop_toTopOf="@+id/rbtnMiercoles"
        app:layout_constraintVertical_bias="0.0" />

    <RadioButton
        android:id="@+id/rbtnViernes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Viernes"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/rbtnMiercoles"
        app:layout_constraintTop_toBottomOf="@+id/rbtnMiercoles"
        app:layout_constraintVertical_bias="0.037" />

    <RadioButton
        android:id="@+id/rbtnSabado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sábado"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/rbtnViernes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/rbtnJueves"
        app:layout_constraintTop_toTopOf="@+id/rbtnViernes"
        app:layout_constraintVertical_bias="0.101" />

    <RadioButton
        android:id="@+id/rbtnDomingo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Domingo"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rbtnViernes"
        app:layout_constraintVertical_bias="0.045" />

    <TextView
        android:id="@+id/txtvHoraInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Hora de inicio:"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toStartOf="@+id/txtvDias"
        app:layout_constraintTop_toBottomOf="@+id/rbtnDomingo"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/txtvHoraFin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Hora de fin:"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtvHoraInicio"
        app:layout_constraintTop_toBottomOf="@+id/txtvHoraInicio"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtILHoraInicio"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="108dp"
        android:layout_height="56dp"
        android:layout_marginStart="76dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtvHoraInicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txtvHoraInicio"
        app:layout_constraintTop_toTopOf="@+id/txtvHoraInicio"
        app:layout_constraintVertical_bias="0.75">

        <AutoCompleteTextView
            android:id="@+id/actvHoraInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Inicio"
            android:inputType="none"
            android:textColorHint="@color/purple_700"
            android:textSize="12sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtILHoraFin"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="108dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtvHoraFin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtILHoraInicio"
        app:layout_constraintTop_toTopOf="@+id/txtvHoraFin"
        app:layout_constraintVertical_bias="0.75">

        <AutoCompleteTextView
            android:id="@+id/actvHoraFin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fin"
            android:inputType="none"
            android:textColorHint="@color/purple_700"
            android:textSize="12sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@null"
        android:background="@drawable/custom_button"
        android:text="Guardar"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtvHoraFin"
        app:layout_constraintVertical_bias="0.191" />

    <TextView
        android:id="@+id/txtvBarraAzul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/azullogo"
        android:text="HHHHHHHHHHHH"
        android:textColor="@color/azullogo"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGuardar"
        app:layout_constraintVertical_bias="0.093" />

    <TextView
        android:id="@+id/txtvBarraVerde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/verdelogo"
        android:text="HHHHHHHHHH"
        android:textColor="@color/verdelogo"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtvBarraAzul"
        app:layout_constraintTop_toBottomOf="@+id/txtvBarraAzul"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtvBarraMorada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/moradologo"
        android:text="HHHHHHHH"
        android:textColor="@color/moradologo"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtvBarraVerde"
        app:layout_constraintTop_toBottomOf="@+id/txtvBarraVerde"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>